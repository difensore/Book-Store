@model Products
<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <h6 class="card-subtitle">Автор: @Model.Author</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="data:image;base64,@Model.Image" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    @if (Model.ProductType=="Книга")
                    {
                        <h4 class="box-title mt-5">Анотація до книги</h4>
                    }
                    else if (Model.ProductType == "Гра")
                    {
                        <h4 class="box-title mt-5">Опис гри</h4>
                    }                
                    <p>@Model.Description</p>
                    <h2 class="mt-5">
                       Ціна: @Model.Price гривень
                    </h2>                    
                    <a asp-action="AddToBasket" asp-route-product="@Model.Id" asp-action="0" class="btn btn-primary">Додати до кошика</a>
                </div>
